<%- include('../partials/head', { title: 'Admin login' }) %>
<section class="card max-w-xl mx-auto space-y-3">
  <h1 class="text-2xl font-bold">Admin přihlášení</h1>
  <% if (demoMode) { %><p class="bg-yellow-100 p-2 rounded">DEMO režim: přihlášení je vypnuto, admin je read-only.</p><% } %>
  <% if (error) { %><p class="bg-red-100 p-2 rounded"><%= error %></p><% } %>
  <form method="post" class="space-y-2">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input name="username" class="w-full border p-2 rounded" placeholder="Uživatelské jméno" required>
    <input name="password" type="password" class="w-full border p-2 rounded" placeholder="Heslo" required>
    <button class="btn btn-primary" type="submit">Přihlásit</button>
  </form>
</section>
<%- include('../partials/foot') %>
