<%- include('../partials/head', { title: 'Admin login' }) %>
<section class="card">
  <h1 class="text-3xl font-bold">Admin login</h1>
  <% if (error) { %><p class="text-slate-300 mt-3"><%= error %></p><% } %>
  <% if (demoMode) { %><p class="text-slate-300 mt-3">DEMO režim: přihlášení je vypnuto.</p><% } %>
  <form method="post" class="mt-3" action="/admin/login">
    <div class="flex gap-3">
      <input name="username" placeholder="Uživatel" required>
      <input name="password" placeholder="Heslo" type="password" required>
      <button class="btn btn-primary" type="submit">Přihlásit</button>
    </div>
  </form>
</section>
<%- include('../partials/foot') %>
