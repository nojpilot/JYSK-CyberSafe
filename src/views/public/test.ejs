<%- include('../partials/head', { title }) %>
<form method="post" class="space-y-4">
  <div class="card">
    <h1 class="text-3xl font-bold"><%= title %></h1>
    <p>Odpověz na otázky A/B/C. Vyber vždy jednu možnost.</p>
  </div>
  <% questions.forEach((q, idx) => { %>
    <section class="card">
      <p class="font-semibold mb-2"><%= idx + 1 %>/<%= questions.length %>: <%= q.question_text %></p>
      <label class="block mb-2"><input required type="radio" name="<%= q.key %>" value="A"> A) <%= q.option_a %></label>
      <label class="block mb-2"><input type="radio" name="<%= q.key %>" value="B"> B) <%= q.option_b %></label>
      <label class="block"><input type="radio" name="<%= q.key %>" value="C"> C) <%= q.option_c %></label>
    </section>
  <% }) %>
  <div class="flex gap-3">
    <a href="/" class="btn btn-secondary">Zpět</a>
    <button class="btn btn-primary" type="submit">Pokračovat</button>
  </div>
</form>
<%- include('../partials/foot') %>
